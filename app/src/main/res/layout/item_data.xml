<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/data_item"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="64dp">

    <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="203dp"
            android:layout_height="23dp"
            android:id="@+id/DataName"
            android:text="@string/_03_06_19_run"
            style="@style/MotionName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.125"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userData"
            android:text="@string/arseny_day_sunny"
            style="@style/Comment"
            android:alpha=".6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_share"
            android:id="@+id/ShareData"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pushed"
            android:id="@+id/StatusData"
            app:layout_constraintTop_toTopOf="@+id/ShareData"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ShareData"
            app:layout_constraintEnd_toStartOf="@+id/ShareData"
            android:layout_marginEnd="4dp"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
