<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_item"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MotionName"
            style="@style/MotionName"
            app:layout_constraintTop_toTopOf="@+id/MotionImg"
            android:layout_marginStart="20dp"
            android:text="@string/motionname"
            app:layout_constraintBottom_toBottomOf="@+id/MotionImg"
            app:layout_constraintStart_toEndOf="@+id/MotionImg"
            android:fontFamily="sans-serif-light"/>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_device"
            android:id="@+id/MotionImg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
