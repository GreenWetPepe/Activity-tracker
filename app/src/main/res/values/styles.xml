<resources>
    <!--Application themes-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="actionBarTheme">@style/MyApp.ActionBarTheme</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/salmonColor</item>
    </style>
    <!--...................-->

    <!--ActionBar styles-->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:textColor">@color/salmonColor</item>
        <item name="background">@color/white</item>
    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/blueDark</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:TextAppearance">
        <item name="android:textColor">@color/salmonColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@sans-serif-medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--................-->

    <!--Animations-->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <!--..........-->

    <!--Dialog style-->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/salmonColor</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!--..........-->

    <!--Text styles-->
    <style name="Comment">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>
    <style name="Titles">
        <item name="android:fontFamily">@sans-serif-medium</item>
        <item name="android:textColor">@color/salmonColor</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <style name="Tips">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <style name="MotionName">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>
    <style name="DeviceNames">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>
    <style name="MacAddresses">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/clickItem</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>
    <style name="active_motion">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/salmonColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.28</item>
    </style>
    <style name="profileText">
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>
    <style name="settingsText">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>
    <style name="ImportantText">
        <item name="android:fontFamily">@sans-serif-light</item>
        <item name="android:textColor">@color/salmonColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>

    <!--..........-->

</resources>
