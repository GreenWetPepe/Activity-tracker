<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".application.Connecting"
        android:background="@color/white"
        android:id="@+id/constraintLayout2">

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@color/salmonColor"
            android:text="@string/connecting"
            style="@style/Titles"
            android:visibility="visible"
            android:id="@+id/connecting_first"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="82dp"
            android:layout_marginStart="82dp"
            android:fontFamily="sans-serif-light"/>
    <ImageView
            android:layout_width="26dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/ic_refresh"
            android:id="@+id/ic_refresh"
            android:contentDescription="@string/bluetooth"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/select_a_device_tip"
            app:layout_constraintTop_toTopOf="@+id/select_a_device_tip"
    />

    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
            android:layout_width="165dp"
            android:layout_height="137dp"
            android:id="@+id/progressBarConnection"
            android:indeterminateTint="#F85F62"
            android:textAlignment="textEnd"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/connecting_first"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="112dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp"
            android:visibility="visible"
            android:indeterminate="true"/>

    <ImageView
            android:layout_width="61dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_bluetooth"

            android:id="@+id/ic_bluetooth"
            app:layout_constraintStart_toStartOf="@+id/progressBarConnection"
            app:layout_constraintEnd_toEndOf="@+id/progressBarConnection"
            app:layout_constraintTop_toTopOf="@+id/progressBarConnection"
            app:layout_constraintBottom_toBottomOf="@+id/progressBarConnection"
            android:contentDescription="@string/bluetooth"
            app:layout_constraintHorizontal_bias="0.496"/>

    <TextView android:layout_height="27dp"
              android:layout_width="276dp"
              android:width="483.5dp"
              android:text="@string/select_a_device"
              app:layout_constraintTop_toBottomOf="@+id/progressBarConnection"
              app:layout_constraintStart_toStartOf="parent"
              android:id="@+id/select_a_device_tip"
              android:layout_marginTop="52dp"
              style="@style/Tips"
              android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.05"
              android:layout_marginEnd="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/select_a_device_tip"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/recyclerViewConnection"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>